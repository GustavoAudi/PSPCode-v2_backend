<div id="login-wrapper">
  <h2 class="login-title"><span>psp</span>code</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, placeholder: "Email", class: "login-field" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", class: "login-field"%>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "submit-btn" %>
    </div>
  <% end %>
</div>
